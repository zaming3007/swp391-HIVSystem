@{
    ViewData["Title"] = "HIV Healthcare System";
}

<div class="container">
    <!-- Hero Section -->
    <div class="text-center py-5">
        <h1 class="display-4">🏥 HIV Healthcare System</h1>
        <p class="lead">Hệ thống Quản lý Chăm sóc Sức khỏe HIV/AIDS</p>
        <p class="text-muted">Phát triển bởi Nhóm SWP391_G6</p>
    </div>

    <!-- Success Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @Html.Raw(TempData["SuccessMessage"])
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Logged in user info -->
    @if (Context.Session.GetString("Username") != null)
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card border-success">
                    <div class="card-header bg-success text-white text-center">
                        <h4>✅ Đăng nhập thành công!</h4>
                    </div>
                    <div class="card-body text-center">
                        <h5>Chào mừng, @Context.Session.GetString("FullName")!</h5>
                        <p class="text-muted">Username: @Context.Session.GetString("Username")</p>
                        
                        <div class="mt-4">
                            <a href="/Home/Dashboard" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-tachometer-alt"></i> Vào Bảng điều khiển
                            </a>
                            <form method="post" action="/Account/Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger btn-lg">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Login/Register Section for non-logged users -->
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header text-center bg-primary text-white">
                        <h3>🔐 Truy cập Hệ thống</h3>
                    </div>
                    <div class="card-body text-center">
                        <p class="mb-4">Hệ thống quản lý thông tin bệnh nhân HIV, bác sĩ, và các dịch vụ chăm sóc sức khỏe.</p>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="/Account/Login" class="btn btn-primary btn-lg me-md-2">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập
                            </a>
                            <a href="/Account/Register" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus"></i> Đăng ký tài khoản
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- System Features -->
    <div class="row mt-5">
        <div class="col-12">
            <h4 class="text-center mb-4">📋 Tính năng Hệ thống</h4>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Quản lý Người dùng</h5>
                    <p class="card-text">Đăng ký, đăng nhập và quản lý thông tin bác sĩ, bệnh nhân, nhân viên.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-calendar-check fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Lịch hẹn</h5>
                    <p class="card-text">Đặt lịch khám, theo dõi cuộc hẹn và quản lý thời gian khám bệnh.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-pills fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Thuốc ARV</h5>
                    <p class="card-text">Quản lý thuốc kháng virus, theo dõi liều lượng và kế hoạch điều trị.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-flask fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Kết quả Xét nghiệm</h5>
                    <p class="card-text">Theo dõi và quản lý kết quả xét nghiệm HIV, CD4, viral load.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-danger mb-3"></i>
                    <h5 class="card-title">Kế hoạch Điều trị</h5>
                    <p class="card-text">Lập và theo dõi kế hoạch điều trị cá nhân cho từng bệnh nhân.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
