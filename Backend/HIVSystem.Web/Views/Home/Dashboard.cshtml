@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="row">
    <div class="col-12">
        <h2>Chào mừng, @ViewBag.FullName!</h2>
        <p class="text-muted">Bảng điều khiển - HIV Healthcare System</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Hồ sơ</h5>
                        <p class="card-text">Quản lý thông tin cá nhân</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
                <a href="#" class="btn btn-light btn-sm mt-2">Xem chi tiết</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Lịch hẹn</h5>
                        <p class="card-text">Quản lý lịch khám</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar fa-2x"></i>
                    </div>
                </div>
                <a href="#" class="btn btn-light btn-sm mt-2">Xem lịch</a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Báo cáo</h5>
                        <p class="card-text">Xem kết quả điều trị</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                </div>
                <a href="#" class="btn btn-light btn-sm mt-2">Xem báo cáo</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-bell"></i> Thông báo</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> 
                    <strong>Chào mừng bạn đến với HIV Healthcare System!</strong>
                    <br>Đây là trang demo chức năng đăng nhập và đăng ký.
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> 
                    <strong>Lưu ý:</strong> Đây là hệ thống demo, vui lòng không nhập thông tin cá nhân thật.
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-user-circle"></i> Thông tin tài khoản</h6>
            </div>
            <div class="card-body">
                <p><strong>Username:</strong> @ViewBag.Username</p>
                <p><strong>Họ tên:</strong> @ViewBag.FullName</p>
                <p><strong>Trạng thái:</strong> <span class="badge bg-success">Đang hoạt động</span></p>
                
                <hr>
                <div class="d-grid">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 