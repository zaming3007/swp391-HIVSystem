@{
    ViewData["Title"] = "Test New User Appointment Creation";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-user-plus"></i> Test New User Appointment Creation</h2>
            <p class="text-muted">Debug page để test việc tạo lịch khám cho user mới</p>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @Html.Raw(TempData["Message"])
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @Html.Raw(TempData["Error"])
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users"></i> Test Users</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TestUsers != null && ((List<HIVHealthcareSystem.Models.User>)ViewBag.TestUsers).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Username</th>
                                        <th>FullName</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in (List<HIVHealthcareSystem.Models.User>)ViewBag.TestUsers)
                                    {
                                        <tr>
                                            <td>@user.UserID</td>
                                            <td>@user.Username</td>
                                            <td>@user.FullName</td>
                                            <td>
                                                <button class="btn btn-sm btn-primary" onclick="testLogin('@user.Username', 'test123')">
                                                    Test Login
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No test users found</p>
                    }
                    
                    <form method="post" action="/Test/CreateTestUser" class="mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-plus"></i> Create New Test User
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-user-md"></i> Available Doctors</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Doctors != null && ((List<HIVHealthcareSystem.Models.User>)ViewBag.Doctors).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Username</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var doctor in (List<HIVHealthcareSystem.Models.User>)ViewBag.Doctors)
                                    {
                                        <tr>
                                            <td>@doctor.UserID</td>
                                            <td>@doctor.FullName</td>
                                            <td>@doctor.Username</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> No doctors found in system
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-calendar"></i> Recent Appointments</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentAppointments != null && ((List<HIVHealthcareSystem.Models.Appointment>)ViewBag.RecentAppointments).Any())
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Doctor</th>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Patient Name</th>
                                        <th>Created By</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var apt in (List<HIVHealthcareSystem.Models.Appointment>)ViewBag.RecentAppointments)
                                    {
                                        <tr>
                                            <td>@apt.AppointmentID</td>
                                            <td>@apt.Doctor?.FullName</td>
                                            <td>@apt.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                            <td>@apt.AppointmentTime.ToString(@"hh\:mm")</td>
                                            <td>@apt.PatientName</td>
                                            <td>@apt.CreatedBy</td>
                                            <td><span class="badge bg-primary">@apt.Status</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent appointments found</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-tools"></i> Debug Tools</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group mb-3" role="group">
                        <button class="btn btn-info" onclick="checkSession()">
                            <i class="fas fa-search"></i> Check Session
                        </button>
                        <button class="btn btn-warning" onclick="clearSession()">
                            <i class="fas fa-trash"></i> Clear Session
                        </button>
                        <a href="/Home/AppointmentBooking" class="btn btn-primary">
                            <i class="fas fa-calendar-plus"></i> Go to Booking
                        </a>
                    </div>
                    
                    <div id="debugResults" class="mt-3"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function testLogin(username, password) {
    try {
        const response = await fetch('/Account/Login', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: `Username=${encodeURIComponent(username)}&Password=${encodeURIComponent(password)}`
        });
        
        if (response.ok) {
            alert(`Đăng nhập thành công với ${username}`);
            location.reload();
        } else {
            alert('Đăng nhập thất bại');
        }
    } catch (error) {
        alert('Lỗi: ' + error.message);
    }
}

async function checkSession() {
    try {
        const response = await fetch('/api/appointments/debug/session');
        const data = await response.json();
        
        document.getElementById('debugResults').innerHTML = `
            <div class="alert alert-info">
                <h6>Session Debug Info:</h6>
                <pre>${JSON.stringify(data, null, 2)}</pre>
            </div>
        `;
    } catch (error) {
        document.getElementById('debugResults').innerHTML = `
            <div class="alert alert-danger">
                <h6>Error:</h6>
                <p>${error.message}</p>
            </div>
        `;
    }
}

async function clearSession() {
    try {
        const response = await fetch('/Account/Logout', {
            method: 'POST'
        });
        
        if (response.ok) {
            alert('Session cleared');
            location.reload();
        }
    } catch (error) {
        alert('Error clearing session: ' + error.message);
    }
}
</script> 